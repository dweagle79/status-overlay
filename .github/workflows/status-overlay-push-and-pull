name: Build and Push Docker Image

on:
  push:
    branches:
      - main 
  pull_request:
    branches:
      - main 
  workflow_dispatch

jobs:
  build-and-push:
    runs-on: ubuntu-latest
    steps:
      -uses: actions/checkout@V3
      -name: build and push the image
        run: |
          docker longin --username dweagle79 --password ${{ secrets.GIT_HUB_TOKEN }} ghcr.io
          docker build . --tag ghcr.io/dweagle79/status-overlay:latest
          docker push ghcr.io/dweagle79/status-overlay:latest

